                <p class="card-title"><%= post.content %></p>
                <p><small><%= post.user.name%></small></p>
                <div>
                    <% if(locals.user){%>
                        <form action="/comments/create" method="POST">
                            <input type="text" name="content" placeholder="add comment..." required>
                            <input type="hidden" name="post" value="<%= post.id %>">
                            <button value="submit"> Add comment </button>
                        </form>
                    <%}%>
                </div>
                <div class="post-comments-list">
                    <h6>Comments</h6>
                    <ul id="post-comments-list-<%= post._id%>" class=card>
                        
                        <% for (let comment of post.comments){%>
                        <li>
                            <% if(locals.user && locals.user.id == comment.user.id) {%>
                            <a href="/comments/destroy/<%= comment.id %>">x</a>
                            <%}%>
                            <label for="comment-content"><small><b><%= comment.user.name %></b></small></label>
                            <p id="comment-content"><%= comment.content %></p>
                            
                        </li>
                        <%}%>
                    </ul>
                </div>
