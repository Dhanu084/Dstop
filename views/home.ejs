
    <section id="feed-posts">
        <h4>Posts</h4>
        <% if(locals.user) {%>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content"  cols="50" rows="3" placeholder="Type here..."></textarea><br>
            <button value="submit"> Post </button>
        </form>
        <%}%>
    </section>

    <section id="available-posts">
        <h4>Latest Feeds</h4><br>
        <% for(let post of posts) { %>
            <div class="card">
                <ul>
                    <li> 
                        <p class="card-title"><%= post.content %></p>
                        <p><small><%= post.user.name%></small></p>
                        <div>
                            <% if(locals.user){%>
                                <form action="/comments/create" method="POST">
                                    <input type="text" name="content" placeholder="add comment..." required>
                                    <input type="hidden" name="post" value="<%= post.id %>">
                                    <button value="submit"> Add comment </button>
                                </form>
                            <%}%>
                        </div>
                        <div class="post-comments-list">
                            <h6>Comments</h6>
                            <ul id="post-comments-list-<%= post._id%>" class=card>
                                <% for (let comment of post.comments){%>
                                <li>
                                    <label for="comment-content"><small><b><%= comment.user.name %></b></small></label>
                                    <p id="comment-content"><%= comment.content %></p>
                                    
                                </li>
                                <%}%>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        <% } %>
    </section>
